<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techoflip.navdemo.cardview.Chest_Shoulder_Exercise">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/pushups"
            android:layout_width="368dp"
            android:layout_height="350dp"
            android:src="@drawable/rowing"
            android:layout_marginTop="0in"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aboutpushups0"
            android:lineSpacingExtra="8dp"
            android:textSize="20dp"
            android:textColor="@color/bg2"
            android:gravity="center"
            android:text="Time Duration - You Choose"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/procedure"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="#78909c"
            android:id="@+id/procedure"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aboutpushups"
            android:lineSpacingExtra="10dp"
            android:textSize="18sp"
            android:textColor="#1e88e5"
            android:text="@string/rowing"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />







    </LinearLayout>

</ScrollView>
